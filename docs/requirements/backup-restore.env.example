# Backup/restore environment template (fill as needed)

# Database connection
DB_HOST=
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=
DB_NAME=postgres

# Local backup directory
BACKUP_DIR=./tmp/erp4-backups
BACKUP_PREFIX=erp4

# Optional asset directory (PDF/attachments)
ASSET_DIR=

# Remote host (temporarily off-host backup)
REMOTE_HOST=
REMOTE_USER=
REMOTE_PORT=22
REMOTE_DIR=
REMOTE_SSH_KEY=
REMOTE_SSH_OPTS=
REMOTE_KEEP_DAYS=

# GPG (optional encryption)
GPG_RECIPIENT=
GPG_HOME=
GPG_REMOVE_PLAINTEXT=1

# S3 (when available)
S3_BUCKET=erp4-backups
S3_PREFIX=erp4/prod
S3_REGION=ap-northeast-1
S3_ENDPOINT_URL=
# Optional for check-backup-s3-readiness.sh when KMS endpoint differs
KMS_ENDPOINT_URL=
SSE_KMS_KEY_ID=alias/erp4-backup
SSE_S3=
# Optional for check-backup-s3-readiness.sh
# EXPECT_SSE: aws:kms | AES256 | any
EXPECT_SSE=aws:kms
# CHECK_WRITE=1 to run put/delete probe
CHECK_WRITE=0

# Restore options
RESTORE_CONFIRM=1
SKIP_GLOBALS=1
# RESTORE_CLEAN is supported by scripts/podman-poc.sh (PoC) only
RESTORE_CLEAN=1
BACKUP_FILE=
BACKUP_GLOBALS_FILE=
BACKUP_ASSETS_FILE=
